<zk>
	<window title="Search Client" width="600px"
		apply="com.payulatam.samples.bank.webClient.controller.ClientController">
		4
		<grid id="searchClientForm">

			<rows>
				<row>
					<label width="60px" value="Id" />
					<textbox />
				</row>
				<row>
					<label width="60px" value="Name" />
					<textbox
						constraint="/[a-zA-Z\s]*/: Please enter a valid Name" />
				</row>
				<row>
					<label width="60px" value="Address" />
					<textbox
						constraint="/[\w\s#\-]*/: Please enter a valid address" />
				</row>
				<row>
					<label width="60px" value="Phone number" />
					<textbox
						constraint="/[\d]*/: Please enter a valid phone number" />
				</row>
				<row>
					<button id="submitSearchClient" label="search" />
				</row>
			</rows>

		</grid>
		<grid id="resultsGrid" visible="false">
			<columns>
				<column></column>
				<column>ID</column>
				<column>Name</column>
				<column>Address</column>
				<column>Phone number</column>
				<column>Options</column>
			</columns>
		</grid>

	</window>

</zk>
